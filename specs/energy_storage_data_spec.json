{
  "phase_1": {
    "load": {
      "required_fields": [
        "ts",
        "load_mw",
        "quality_flag"
      ],
      "granularity": "hourly (preferred) or 15-min aggregated",
      "history": ">= 3 years",
      "owner": "CPAU"
    },
    "outages": {
      "required_fields": [
        "start_ts",
        "end_ts",
        "cause_code",
        "area",
        "customers_affected"
      ],
      "granularity": "events",
      "history": ">= 3 years",
      "owner": "CPAU OMS"
    },
    "weather_hist": {
      "required_fields": [
        "ts",
        "temp",
        "dew_point_or_rh",
        "wind_speed",
        "wind_gust",
        "precip"
      ],
      "granularity": "hourly",
      "source": "NOAA/NWS (nearest station)"
    },
    "forecast_archive": {
      "required_fields": [
        "ts_issue",
        "horizon_hours",
        "vars",
        "values",
        "gridpoint",
        "location",
        "provider"
      ],
      "granularity": "per-issuance (hourly) with 1\u20137 day hourly horizons",
      "source": "NWS gridpoints (archive each issuance)"
    },
    "weather_fcst": {
      "required_fields": [
        "ts",
        "temp",
        "rh",
        "wind",
        "gust",
        "precip_prob"
      ],
      "granularity": "hourly (1\u20137 days)",
      "source": "NWS gridpoints"
    },
    "calendar": {
      "required_fields": [
        "ts",
        "hour",
        "dow",
        "is_holiday",
        "month",
        "is_summer",
        "school_term"
      ],
      "granularity": "hourly",
      "source": "US holidays, local calendars"
    },
    "grid_stress": {
      "required_fields": [
        "ts",
        "lmp",
        "node_id",
        "market_run_id",
        "alerts_optional"
      ],
      "granularity": "hourly",
      "source": "CAISO OASIS (prefer DLAP_PGAE-APND; fallback TH_NP15)"
    }
  },
  "phase_2": {
    "der": {
      "required_fields": [
        "zip_or_feeder",
        "installed_kw",
        "interconnection_date"
      ],
      "granularity": "monthly updates",
      "source": "CPUC/NEM, LBNL, utility interconnections"
    },
    "ev_proxy": {
      "required_fields": [
        "ts",
        "lat",
        "lon",
        "ports",
        "network",
        "open_date"
      ],
      "granularity": "station-level; aggregate to city",
      "source": "AFDC EV charging dataset"
    },
    "mobility": {
      "required_fields": [
        "ts",
        "location_id",
        "count"
      ],
      "granularity": "hourly",
      "source": "Caltrans PeMS"
    },
    "assets": {
      "required_fields": [
        "asset_id",
        "rating",
        "peak_loading",
        "install_year"
      ],
      "granularity": "asset-level",
      "owner": "CPAU"
    },
    "irradiance": {
      "required_fields": [
        "ts",
        "ghi",
        "dni",
        "dhi",
        "cloud_cover"
      ],
      "granularity": "hourly",
      "source": "NSRDB or CAMS; pvlib clear-sky as fallback"
    },
    "ev_registrations": {
      "required_fields": [
        "geo",
        "date",
        "num_evs"
      ],
      "granularity": "monthly or quarterly",
      "source": "CA DMV or third-party (if accessible)"
    },
    "outage_public_proxy": {
      "required_fields": [
        "ts",
        "jurisdiction",
        "customers_out",
        "event_id"
      ],
      "granularity": "events or hourly aggregates",
      "source": "Public outage aggregators (as proxy, if OMS not available)"
    }
  }
}